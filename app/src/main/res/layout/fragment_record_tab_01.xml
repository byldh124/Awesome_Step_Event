<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_tab1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/text_information"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/liquid"
        app:lottie_repeatCount="-1" />


    <TextView
        android:id="@+id/text_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/step_information"
        android:textColor="#ff333333"
        app:layout_constraintBottom_toTopOf="@id/tab1_button_container" />

    <RelativeLayout
        android:id="@+id/tab1_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_step_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/active_button_selector"
            android:fontFamily="@font/font_ex"
            android:text="걸음시작"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>