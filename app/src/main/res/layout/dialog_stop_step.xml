<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_step_stop_dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_close_24"
        app:tint="@color/black"
        android:layout_gravity="right"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="걸음 수 세기를 중지하시겠습니까"
        android:layout_marginTop="8dp"
        android:textColor="#ff333333"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:padding="16dp">
        <Button
            android:id="@+id/btn_step_stop_dialog_continue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="이어서"
            android:fontFamily="@font/font_ex"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:background="@drawable/active_button_selector"
            app:backgroundTint="@null"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="16dp"/>

        <Button
            android:id="@+id/btn_step_stop_dialog_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="중지하기"
            android:fontFamily="@font/font_ex"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:background="@drawable/none_active_button_selector"
            app:backgroundTint="@null"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp"/>

    </LinearLayout>

</LinearLayout>