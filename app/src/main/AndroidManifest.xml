<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.moondroid.awesome_step_event">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.gms.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".common.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Awesome_Step_Event"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.StepDialogActivity"
            android:screenOrientation="fullSensor" />
        <activity android:name=".view.ProfileSettingActivity"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".view.MedalDialogActivity"
            android:screenOrientation="fullSensor"/>
        <activity
            android:name=".view.BottomTab3DialogActivity"
            android:theme="@style/Transparent"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".view.ShareActivity"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".view.OnlineCertificationActivity"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".view.QuestionActivity"
            android:screenOrientation="fullSensor"/>
        <activity
            android:name=".view.DialogActivity"
            android:theme="@style/Transparent"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".view.IntroActivity"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.LoginActivity"
            android:screenOrientation="fullSensor"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="fullSensor">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>

        <service android:name=".walk.StepCheckService">
            <intent-filter>
                <action android:name="app.manbo.Service" />
            </intent-filter>
        </service>
    </application>

</manifest>